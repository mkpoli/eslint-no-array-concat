{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node",
    ],
    "typeRoots": [
      "./"
    ]
  },
  "include": [
    "src",
    "global.d.ts",
  ],
  "exclude": ["node_modules", "tests"]
}
